<div class="col-sm-6 col-md-4">
  <div class="thumbnail">
    <%= content_tag 'div', '', class: 'event-background' %>
    <div class="thumbnail-inner event-info-inner">
      <div class="caption">
        <div class="event-description">
          <h3><%= stores_product.product.name %></h3>
          <h3>
            <small><%= stores_product.product.category.name %></small>
          </h3>
          <div class="buffer-both"><%= "Цена: #{stores_product.price}" %></div>
        </div>
      </div>
    </div>
  </div>
</div>
